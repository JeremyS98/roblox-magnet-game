-- ServerScriptService/Modules/Admins.lua (full)
local Admins = {}

-- Replace with your numeric Roblox UserId(s)
Admins.LIST = {
	9133502916
}

function Admins.IsAdmin(userId)
	for _, id in ipairs(Admins.LIST) do
		if id == userId then return true end
	end
	return false
end

function Admins.Add(id) table.insert(Admins.LIST, id) end
function Admins.Remove(id)
	for i,v in ipairs(Admins.LIST) do
		if v == id then table.remove(Admins.LIST, i) break end
	end
end

return Admins
