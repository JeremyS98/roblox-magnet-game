-- FeatureFlags.lua
-- Central place to enable/disable major features without breaking the game

local FeatureFlags = {
	MagnetsEnabled = false,  -- New magnet system toggle
	ReelV2Enabled = false,   -- Improved reel minigame toggle
	ServerLuckUI = true,     -- Show server luck countdown chip
	SellAnywhere = true,     -- Allow selling anywhere (pass required)
	DoubleXP = true          -- Double XP gamepass
}

return FeatureFlags
